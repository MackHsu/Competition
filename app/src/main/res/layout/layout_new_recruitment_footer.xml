<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/new_recruitment_confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/xui_config_selectable_item_selector"
            android:text="确定"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/new_recruitment_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/xui_config_selectable_item_selector"
            android:text="取消"
            android:textColor="@color/xui_config_color_edittext_error_text"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/new_recruitment_confirm_btn"
            app:layout_constraintEnd_toStartOf="@+id/new_recruitment_confirm_btn"
            app:layout_constraintTop_toTopOf="@+id/new_recruitment_confirm_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>